{
  "name": "Blazor Server UI",
  "type": "coreclr",
  "request": "launch",
  "preLaunchTask": "build-ui",
  "program": "${workspaceFolder}/BookStoreApp.Blazor.Server.UI/bin/Debug/net6.0/BookStoreApp.Blazor.Server.UI.dll",
  "args": [],
  "cwd": "${workspaceFolder}/BookStoreApp.Blazor.Server.UI",
  "env": {
    "ASPNETCORE_ENVIRONMENT": "Development",
    "ASPNETCORE_URLS": "https://localhost:7126;http://localhost:5124"
  },
  "serverReadyAction": {
    "action": "openExternally",
    "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
    "uriFormat": "https://localhost:7126"
  }
}
